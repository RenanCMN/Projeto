extends ../default

block content
  include ../templates/nav
  div(class=['ui','container','grid','stackable'])
    div(class=['ten','wide','column'])
      h2(class=['ui','header','blue','dividing'])= 'Venda Produtos'
      
      div(class='form-novoproduto')
        form(class=['ui','form'] action="http://localhost:3000/prees" method="POST")
          div(class=['ui','field'])
            label(for="nome")='Nome Produto'
            input(type="text" name="nome" value=produto.nome placeholder="Nome Produto" disabled)
          div(class=['ui','two','fields']) 
             div(class=['ui','field'])
               label(for="nome")='Preco'
               input(type="text" name="preco" value=produto.preco placeholder="Preco"  disabled) 
             div(class=['ui','field'])
               label(for="nome")='Estoque'
               input(type="text" name="estoque" value=produto.estoque placeholder="Estoque"  disabled) 
               input(type="hidden" name="id_produto" value=produto.id_produto placeholder="Estoque")
          div(class=['ui','two','fields'])
            div(class=['ui','field'])
              label(for="quantidade")='Quantidade'
              input(type="number" min="0" name="qtdvenda" id='qtdvenda' value="1" )  
          div(class=['ui','field'])
              label(for="tipopagamento")="Tipo Pagamento"
              select(name="tippagamento")
                option(value="A Vista")="A Vista"
                option(value="A Prazo")="A Prazo"
                option(value="Cartao")="Cartao"
          div(class=['ui','field'])
            label(for="parcelamento")='Quantidade de Parcela'
            select(name="parcelamento")
              option(value="1")="1 "
              
          button(class=['ui','button','basic','black'])='Vender'
           div(class=['ui','message','error'])

  script(src='/javascripts/validacion.js')        